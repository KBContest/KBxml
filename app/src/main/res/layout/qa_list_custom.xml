<?xml version="1.0" encoding="utf-8"?>
<!--질의응답-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp"
    android:background="@color/qa_contents_background">

    <TextView
        android:id="@+id/qna_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="맑은구름"
        android:textColor="@color/white_44"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/qna_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/qna_name"
        android:text="2022.08.03"
        android:textColor="@color/white_44"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/qna_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qna_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="Q. 일본으로 반출된 문화재에는 무엇이 있나요?"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <View
        android:id="@+id/qna_divide_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/qna_q"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white_44" />

    <Button
        android:id="@+id/qna_q_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/qna_divide_line"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="4dp"
        android:layout_toStartOf="@+id/qna_a_btn"
        android:background="@android:color/transparent"
        android:fontFamily="@font/apple_sd_gothic_neo_b"
        android:text="궁금해요 1"
        android:textColor="@color/white_44"
        android:textSize="13dp" />

    <Button
        android:id="@+id/qna_a_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/qna_divide_line"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/apple_sd_gothic_neo_b"
        android:text="답변 2"
        android:textColor="@color/white_44"
        android:textSize="13dp" />

</RelativeLayout>