<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QaFragment">

    <!--질의응답_1-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qna_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="질의응답"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:paddingTop="30dp"
                android:paddingBottom="25dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp" >

                <View
                    android:id="@+id/qna_background_view"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/qa_contents_background" />

                <TextView
                    android:id="@+id/qna_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="질문과 답변을 남겨보세요!"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/qna_divide_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignBottom="@+id/qna_title"
                    android:background="@color/white_44" />

                <EditText
                    android:id="@+id/qna_editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/qna_divide_line"
                    android:backgroundTint="@android:color/transparent"
                    android:ems="150"
                    android:fontFamily="@font/apple_sd_gothic_neo_b"
                    android:hint="궁금한 것을 적어주세요."
                    android:inputType="none"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_44"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/qna_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/qna_background_view"
                    android:layout_alignBottom="@+id/qna_background_view"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="0/150"
                    android:textColor="@color/white_44"
                    android:textSize="12dp" />

                <android.widget.Button
                    android:id="@+id/qna_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignEnd="@+id/qna_background_view"
                    android:layout_alignBottom="@+id/qna_background_view"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/radius_beige"
                    android:text="질문 남기기"
                    android:textSize="12dp" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/qa_contents_background">

                <TextView
                    android:id="@+id/qna_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="맑은구름"
                    android:textColor="@color/white_44"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/qna_day2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/qna_name2"
                    android:text="2022.08.03"
                    android:textColor="@color/white_44"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/qna_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/qna_name2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="Q. 일본으로 반출된 문화재에는 무엇이 있나요?"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <View
                    android:id="@+id/qna_divide_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/qna_q2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white_44" />

                <Button
                    android:id="@+id/qna_q_btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/qna_divide_line2"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toStartOf="@+id/qna_a_btn2"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/apple_sd_gothic_neo_b"
                    android:text="궁금해요 1"
                    android:textColor="@color/white_44"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/qna_a_btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/qna_divide_line2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="4dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/apple_sd_gothic_neo_b"
                    android:text="답변 2"
                    android:textColor="@color/white_44"
                    android:textSize="13dp" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/qa_contents_background">

                <TextView
                    android:id="@+id/qna_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="두두"
                    android:textColor="@color/white_44"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/qna_day3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/qna_name3"
                    android:text="2022.08.02"
                    android:textColor="@color/white_44"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/qna_q3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/qna_name3"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="Q. 일본에서 환수하지 못한 문화재는 무엇인가요?"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <View
                    android:id="@+id/qna_divide_line3"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/qna_q3"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white_44" />

                <Button
                    android:id="@+id/qna_q_btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/qna_divide_line3"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toStartOf="@+id/qna_a_btn"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/apple_sd_gothic_neo_b"
                    android:text="궁금해요 4"
                    android:textColor="@color/white_44"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/qna_a_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/qna_divide_line3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="4dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/apple_sd_gothic_neo_b"
                    android:text="답변 1"
                    android:textColor="@color/white_44"
                    android:textSize="13dp" />

            </RelativeLayout>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/qa_contents_background">

                <TextView
                    android:id="@+id/qna_name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="곰돌여왕"
                    android:textColor="@color/white_44"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/qna_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/qna_name4"
                    android:text="2022.08.01"
                    android:textColor="@color/white_44"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/qna_q4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/qna_name4"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="Q. 일본과 관련된 전쟁에는 무엇이 있나요?"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <View
                    android:id="@+id/qna_divide_line4"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/qna_q4"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white_44" />

                <Button
                    android:id="@+id/qna_q_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/qna_divide_line4"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toStartOf="@+id/qna_a_btn4"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/apple_sd_gothic_neo_b"
                    android:text="궁금해요 8"
                    android:textColor="@color/white_44"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/qna_a_btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/qna_divide_line4"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="4dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/apple_sd_gothic_neo_b"
                    android:text="답변 0"
                    android:textColor="@color/white_44"
                    android:textSize="13dp" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>