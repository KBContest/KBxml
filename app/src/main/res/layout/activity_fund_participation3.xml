<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FundParticipationActivity3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/part_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_back"
                android:background="@android:color/transparent"
                android:paddingLeft="25dp"
                android:paddingTop="45dp"
                android:paddingBottom="25dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.widget.Button
                    android:id="@+id/circle_view1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="130dp"
                    android:background="@drawable/circle_dotted_btn"
                    android:fontFamily="@font/apple_sd_gothic_neo_eb"
                    android:text="후원금\n입력"
                    android:textColor="@color/point_beige"
                    android:textSize="11dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <View
                    android:id="@+id/dotted_line_view"
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="@drawable/dotted_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/circle_view2"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/circle_view1"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.widget.Button
                    android:id="@+id/circle_view2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="130dp"
                    android:background="@drawable/circle_btn"
                    android:fontFamily="@font/apple_sd_gothic_neo_eb"
                    android:text="결제"
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="35dp">

                <ImageView
                    android:id="@+id/part_item_image"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/yi_eumjeog"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:layout_editor_absoluteY="1dp" />

                <TextView
                    android:id="@+id/part_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일본으로 반출된 우리 문화재 환수 지원"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    app:layout_constraintStart_toEndOf="@+id/part_item_image"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/part_item_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="1,450,000"
                    android:textColor="@color/white_44"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/part_item_image" />

                <TextView
                    android:id="@+id/part_item_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="80%"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/part_item_amount" />

                <TextView
                    android:id="@+id/part_item_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="2일 남음"
                    android:textColor="@color/white_44"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/part_item_percent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/part_line1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white_44" />

            <TextView
                android:id="@+id/part_profile_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:text="후원자 정보"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/part_profile_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/part_profile_info_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:text="익명의 후원자 123"
                    android:textColor="@color/white_44"
                    android:textSize="13dp"
                    app:layout_constraintStart_toEndOf="@id/part_profile_info_name"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/apple_sd_gothic_neo_m"/>

                <TextView
                    android:id="@+id/part_profile_info_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="휴대폰 번호"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/part_profile_info_name" />

                <TextView
                    android:id="@+id/part_profile_info_phone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="10dp"
                    android:text="010-9999-0000"
                    android:textColor="@color/white_44"
                    android:textSize="13dp"
                    app:layout_constraintStart_toEndOf="@id/part_profile_info_phone"
                    app:layout_constraintTop_toBottomOf="@id/part_profile_info_name2"
                    android:fontFamily="@font/apple_sd_gothic_neo_m" />

                <TextView
                    android:id="@+id/part_profile_info_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/part_profile_info_phone"/>

                <TextView
                    android:id="@+id/part_profile_info_email2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="54dp"
                    android:layout_marginTop="10dp"
                    android:text="KbBank@naver.com"
                    android:textColor="@color/white_44"
                    android:textSize="13dp"
                    app:layout_constraintStart_toEndOf="@id/part_profile_info_email"
                    app:layout_constraintTop_toBottomOf="@id/part_profile_info_phone2"
                    android:fontFamily="@font/apple_sd_gothic_neo_m"/>

                <CheckBox
                    android:id="@+id/part_profile_info_check"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/btn_gray"
                    android:text="(필수) 펀딩 진행에 대한 새소식 및 결제 안내를 받습니다."
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/part_profile_info_email"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/part_line2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white_44" />

            <TextView
                android:id="@+id/part_pay_amount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:text="후원 금액"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/final_pay_amount_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_box_custom"
                    android:text="최종 후원 금액"
                    android:textColor="@color/white_44"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:padding="14dp"
                    android:fontFamily="@font/apple_sd_gothic_neo_m" />

                <TextView
                    android:id="@+id/final_pay_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/final_pay_amount_title"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="11dp"
                    android:text="100,000원"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

            </RelativeLayout>

            <View
                android:id="@+id/part_line3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white_44" />

            <TextView
                android:id="@+id/part_pay_way_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:text="결제 수단"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">

                <CheckBox
                    android:id="@+id/part_pay_way_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카드 및 계좌"
                    android:textColor="@color/white_44"
                    android:textSize="13dp"
                    android:button="@drawable/selector_pay_check"
                    android:paddingLeft="7dp"/>

                <CheckBox
                    android:id="@+id/part_pay_way_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="네이버 페이"
                    android:textColor="@color/white_44"
                    android:textSize="13dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/selector_pay_check"
                    android:paddingLeft="7dp"/>

            </LinearLayout>

            <android.widget.Button
                android:id="@+id/part_next_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_beige"
                android:padding="10dp"
                android:text="결제하기"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="32dp"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>