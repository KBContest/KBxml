<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/contents_story_list_back"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".ContentsStoryListActivity">

    <ImageButton
        android:id="@+id/contents_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/btn_back"
        android:background="@android:color/transparent"
        android:layout_marginLeft="35dp"
        android:layout_weight="0.7"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/contents_story_list_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="일본서 고국으로 돌아온\n문화재 이야기"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_weight="1"
        android:fontFamily="@font/apple_sd_gothic_neo_eb"/>

    <ListView
        android:id="@+id/contents_story_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.3"
        android:divider="@color/white_44"
        android:dividerHeight="1.5px"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

</LinearLayout>