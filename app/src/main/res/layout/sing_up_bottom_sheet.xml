<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:paddingRight="35dp"
    android:paddingLeft="35dp"
    android:weightSum="5"
    app:behavior_hideable="true"
    app:behavior_draggable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <CheckBox
        android:id="@+id/check_all"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="전체 동의"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:button="@drawable/sign_up_custom_check"
        android:paddingLeft="15dp"
        android:layout_weight="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_44"
        android:layout_marginBottom="15dp"/>

    <CheckBox
        android:id="@+id/check_service"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="서비스 이용 동의 (필수)"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:button="@drawable/sign_up_custom_check"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/check_privacy"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="개인정보 수집 및 이용 동의 (필수)"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:button="@drawable/sign_up_custom_check"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/check_marketing"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="마케팅 정보 수신 동의 (선택)"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:button="@drawable/sign_up_custom_check"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="다음"
        android:textSize="16dp"
        android:textColor="#50ffffff"
        android:padding="10dp"
        android:background="@drawable/radius_gray"
        android:layout_marginBottom="40dp"/>


</LinearLayout>